@import '~assets/css/variables'

$logo_size = 50px

.wrapper
  border-bottom 1px solid $color-gray-beta
  position relative
  transition .15s ease background
  &:hover
    background $color-gray-gamma
    cursor pointer

  a
    width 100%
    padding 15px 0
    text-decoration none
    display flex
    align-items center

.logo
  box-sizing content-box
  height $logo_size
  padding 0 16px
  display flex
  justify-content center
  align-items center
  img
    max-width $logo_size
    height auto
    border 10px solid #fff
    border-radius $border-radius
  i
    width $logo_size
    text-align center
    font-size 30px

.name
  h5
    margin-bottom 5px
    color #000

.title
  margin-bottom 5px
  color #000

.colMiddle
  flex 1

.role
  margin-right 6px

.meta
  display flex
  align-items center

.modifiedAt
  margin-left 6px

.isActive
  background $color-gray-gamma
