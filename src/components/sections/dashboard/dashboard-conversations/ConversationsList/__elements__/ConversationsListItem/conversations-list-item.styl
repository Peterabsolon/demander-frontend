@import '~assets/css/variables'

$logo_size = 50px

.wrapper
  border-bottom 1px solid $color-gray-beta
  position relative
  display flex
  align-items center
  padding 15px 0

.logo
  box-sizing content-box
  height $logo_size
  padding 0 25px
  display flex
  justify-content center
  align-items center
  img
    max-width $logo_size
    height auto

.name
  h5
    margin-bottom 5px

.title
  margin-bottom 5px

.colMiddle
  flex 1

.role
  margin-right 6px

.meta
  display flex
  align-items center

.modifiedAt
  margin-left 6px
