    h4
      max-width 400px

.floatleft
  float left

.logotile
  padding 120px 0


.customtitle
  text-align center
  padding 50px 0px 0px 0px
  color #68408e

.violet
  color #68408e

.customdescription
  padding 0px 0px 30px 0px

.textdivider
  background linear-gradient(60deg,#ab47bc,#8EA6D1)
