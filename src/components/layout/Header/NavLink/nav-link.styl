@import '~assets/css/variables'

linkActive()
  color #fff
  opacity 1

.link
  padding 34px 16px 29px
  text-decoration none
  text-transform uppercase
  display inline-block
  font-weight 600
  font-size 13px
  color #fff
  opacity .8
  position relative
  margin-right 10px
  transition .15s ease opacity, .15s ease color
  text-shadow 0px 1px 5px rgba(0,0,0,0.4)
  &:hover
    linkActive()
  &:after
    background #fff
    bottom 2px
    content ''
    height 3px
    left 50%
    transform translateX(-50%)
    position absolute
    width 0
    transition .15s ease color, .15s ease width

.linkActive
  linkActive()
  &:after
    width 100%
