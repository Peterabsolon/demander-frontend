.loader
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background #fff
  display flex
  align-items center
  justify-content center
  padding-right 50px
  opacity 0
  transition 5s ease all
  &.loaderVisible
    opacity 1
    z-index 1000

.noResults
  display flex
  align-items center
  justify-content center
  padding 80px 0
  h4
    margin-bottom 0

.list
  position relative

.grid
  &:after
    content ""
    width 100%
    @media $sm-up
      width 49%
    @media $md-up
      width 32%
  @media $sm-up
    display flex
    justify-content space-between
    flex-wrap wrap

    > div
      width 49%

  @media $md-up
    > div
      width 32%

