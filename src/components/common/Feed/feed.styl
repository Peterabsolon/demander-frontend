.loader
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background #fff
  display flex
  align-items center
  justify-content center
  padding-right 50px
  z-index -1
  opacity 0
  transition .2s ease
  &.loaderVisible
    opacity 1
    z-index 1000
