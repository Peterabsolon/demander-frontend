@import '~assets/css/variables'

.button
  padding 12px 32px
  border-radius $border-radius
  text-decoration none
  display inline-block
  border 0
  outline none
  position relative
  background $brand-primary
  color #fff
  font-size 12px
  text-transform uppercase
  font-weight 600
  transition .15s ease border, .15s ease background, .15s ease box-shadow
  letter-spacing .6px
  white-space nowrap
  box-shadow 1px 2px 3px rgba(0,0,0,0.2)
  a
    color #fff
    transition .15s ease border, .15s ease background, .15s ease box-shadow
    text-decoration none
  .spinner
    background $brand-primary

  &:hover
    box-shadow 1px 4px 20px rgba(0,0,0,0.2)

  &.wide
    padding-left 98px
    padding-right 98px

.center
  display block
  margin-left auto
  margin-right auto

.block
  width 100%
  display block

.spinner
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  z-index 110
  display flex
  align-items center
  justify-content center

.terniary
  background #fff
  color $color-text
  font-weight bold
  // box-shadow 1px 2px 3px rgba(0,0,0,0.2), inset 0px 0px 0px 1px hsla(0, 0%, 87%, 1)
  &:hover
    background #fff
    // box-shadow 1px 4px 20px rgba(0,0,0,0.2), inset 0px 0px 0px 1px hsla(0, 0%, 87%, 1)

  a
    color $color-text
    &:hover
      background #fff

.danger
  background none
  border 2px solid transparent
  color $brand-danger
  &:hover
    border 2px solid $brand-danger

.success
  background none
  border 2px solid transparent
  color $brand-success
  &:hover
    border 2px solid $brand-success

.noBackground
  color $brand-primary
  background none
  // font-size 12px
  box-shadow none !important
  border 0
  padding 0
  font-weight 600
  outline none
  margin-bottom 0
  a
    color $brand-primary

.labelContent
  display flex
  align-items center
  justify-content center
  i
    display block
    font-size 22px
    margin -2px 10px -2px 0

  .iconLeft
    margin-right 10px
    margin-left 0

  .iconRight
    margin-left 10px
    margin-right 0

.alignRight
  margin-left auto
  display block

.small
  padding 6px 12px
  font-size 10px

.centerLeft
  padding-left 32px

.centerRight
  padding-right 32px

.white
  color #fff
  a
    color #fff

.noMargin
  margin 0
