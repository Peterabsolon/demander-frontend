.hero
  height 300px
  margin-top -80px
  display flex
  justify-content center
  align-items center
  background-size cover
  background url('http://demos.creative-tim.com/material-kit/assets/img/examples/city.jpg')
  &:after
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 10
    background rgba(0,0,0,0.7)

.heroContent
  position relative
  z-index 100
  width 500px

.isHome
  height 600px
  background-image url('assets/img/home-background.png')
  background-size cover

.isCompany
  height 380px

.content
  background white
  margin-top -60px
  border-radius 6px
  position relative
  box-shadow 1px 3px 9px rgba(0,0,0,0.1)
  //overflow hidden

.page
  background hsla(0, 0%, 93%, 1)
  padding-bottom 100px
