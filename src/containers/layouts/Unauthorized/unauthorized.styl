.hero
  height 600px
  margin-top -80px
  display flex
  justify-content center
  align-items center
  &:after
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 10
    background rgba(0,0,0,0.7)

.heroContent
  position relative
  z-index 100
  width 500px

.isHome
  background url('assets/img/home-background.png')
  background-size cover

.content
  background white
  margin-top -60px
  border-radius 6px
  height 1500px
  position relative
  box-shadow 1px 8px 13px rgba(0,0,0,0.2)

.page
  background #f2f2f2
